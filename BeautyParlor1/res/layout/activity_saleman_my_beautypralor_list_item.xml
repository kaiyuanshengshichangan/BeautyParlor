<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_fwhite"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/mine_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1.0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/tv_beautyparlor_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="美容院"
                    android:textColor="#202020"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_address"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_beautyparlor_photo" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="联系地址："
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_beautyparlor_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="北京大兴区兴隆山"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_address"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/iv_beautyparlor_photo" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="联系方式："
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/font_14" />

                <TextView
                    android:id="@+id/tv_beautyparlor_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="010-5856587"
                    android:textColor="@color/color_gray"
                    android:textSize="@dimen/font_14" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_commission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_address"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_beautyparlor_photo" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="方案数量："
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/tv_beautyparlor_proposal_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="110"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_address"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_beautyparlor_photo" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="提成："
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/tv_proposal_commission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="2158"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_address"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_beautyparlor_photo" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="广告数量："
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/tv_beautyparlor_guanggao_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="110"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_address"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/iv_beautyparlor_photo" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="提成："
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_14" />

                    <TextView
                        android:id="@+id/tv_guanggao_commission"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="2158"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>