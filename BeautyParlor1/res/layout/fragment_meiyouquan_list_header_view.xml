<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@color/color_white" >

    <ImageView
        android:id="@+id/iv_meiyouquan_header_view"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/beijing1" />

    <ImageView
        android:id="@+id/iv_user_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/mine_avatar" />

    <TextView
        android:id="@+id/tv_user_nick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_meiyouquan_header_view"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="10dp"
        android:textSize="@dimen/font_18"
        android:textColor="@color/color_fwhite"
        android:layout_toLeftOf="@+id/iv_user_photo"
        android:text="衡联科技" />

</RelativeLayout>