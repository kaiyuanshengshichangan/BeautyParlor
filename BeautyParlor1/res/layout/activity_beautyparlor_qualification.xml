<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/title_background" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="补充资料"
            android:textColor="#ffffff"
            android:textSize="@dimen/font_22" />

        <Button
            android:id="@+id/tv_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="确定"
            android:textColor="@color/color_fwhite"
            android:textSize="@dimen/font_18" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.0" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape05"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="美容院中心："
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_beautyparlor_name"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="5dp"
                        android:background="@null"
                        android:hint="请输入您的美容院名称"
                        android:inputType="text"
                        android:textSize="@dimen/midtext" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CDCDCD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="简介："
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_beautyparlor_introduce"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@null"
                        android:gravity="top"
                        android:hint="请输入美容院的介绍"
                        android:minLines="8"
                        android:padding="5dp"
                        android:textSize="@dimen/font_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape05"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="center_vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="管理员："
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_manager"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/username"
                        android:background="@null"
                        android:hint="请输入您的管理员"
                        android:inputType="text"
                        android:textSize="@dimen/midtext" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CDCDCD" />

                <LinearLayout
                    android:id="@+id/rl_city"
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/tv_rexiandingjia"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="联系方式："
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_phone"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/tv_rexiandingjia"
                        android:background="#00000000"
                        android:hint="请输入您的联系方式"
                        android:inputType="phone"
                        android:textSize="@dimen/midtext" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CDCDCD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/tv_zixun_date"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="人员数量："
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_employee_count"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/tv_zixun_date"
                        android:background="#00000000"
                        android:hint="请输入美容院人员数量"
                        android:inputType="text"
                        android:textSize="@dimen/midtext" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CDCDCD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:id="@+id/tv_keshi"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="地址："
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_address"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/tv_keshi"
                        android:background="#00000000"
                        android:hint="请输入地址"
                        android:inputType="text"
                        android:textSize="@dimen/midtext" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#CDCDCD" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="技师姓名："
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <EditText
                        android:id="@+id/et_technician"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="12dp"
                        android:layout_toRightOf="@+id/textView3"
                        android:background="#00000000"
                        android:hint=""
                        android:inputType="text"
                        android:textSize="@dimen/midtext" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/shape05"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingRight="12dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="技师照片"
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <ImageView
                        android:id="@+id/iv_jishi_photo"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/iv_add_pics" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="公司照片"
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <ImageView
                        android:id="@+id/iv_company_pic"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/iv_add_pics" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="营业执照"
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <ImageView
                        android:id="@+id/iv_certificate"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/iv_add_pics" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="资质证书"
                        android:textColor="#000000"
                        android:textSize="@dimen/font_16" />

                    <ImageView
                        android:id="@+id/iv_zizhizhengshu"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/iv_add_pics" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>