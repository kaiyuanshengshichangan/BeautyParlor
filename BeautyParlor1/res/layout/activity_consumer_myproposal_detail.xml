<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/title_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/title_background" >

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/btn_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="我的方案"
            android:textColor="#ffffff"
            android:textSize="22sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:background="@color/color_white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_fwhite"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_proposal_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="拾荒"
                    android:gravity="center_horizontal"
                    android:textColor="#202020"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_proposal_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="天道留学-留学中介高端品牌天道留学-留学中介高端品牌天道留学-留学中介高端品牌天道留学-留学中介高端品牌天道留学-留学中介高端品牌"
                    android:textColor="#808080"
                    android:textSize="@dimen/font_12" />

                <ImageView
                    android:id="@+id/iv_meiyou_pic"
                    android:layout_width="240dp"
                    android:layout_height="240dp"
                    android:scaleType="center"
                    android:src="@drawable/beijing1"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/ll_meiyou_pics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone" >

                    <ImageView
                        android:id="@+id/iv_meiyou_pic1"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="10dp"
                        android:scaleType="fitXY" />

                    <ImageView
                        android:id="@+id/iv_meiyou_pic2"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginLeft="20dp"
                        android:scaleType="fitXY" />
                </LinearLayout>

                <com.henglianmobile.beautyparlor.view.MyGridView
                    android:id="@+id/gv_meiyou_pics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:gravity="center"
                    android:horizontalSpacing="2dp"
                    android:numColumns="3"
                    android:stretchMode="columnWidth"
                    android:verticalSpacing="10dp"
                    android:visibility="gone" />

                <TextView
                        android:id="@+id/tv_publish_time"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_weight="1.0"
                        android:gravity="center_vertical"
                        android:text="一分钟前"
                        android:textSize="@dimen/font_12" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="#CDCDCD" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:paddingRight="10dp" >

                        <LinearLayout
                            android:id="@+id/ll_pinglun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/iv_pinglun"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/iv_comment" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="回复"
                                android:textColor="#808080"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="("
                                android:textColor="#808080"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:id="@+id/tv_pinglun_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#808080"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=")"
                                android:textColor="#808080"
                                android:textSize="@dimen/font_12" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_zan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignTop="@+id/ll_pinglun"
                            android:layout_marginLeft="31dp"
                            android:layout_toRightOf="@+id/ll_pinglun"
                            android:gravity="center_vertical" >

                            <ImageView
                                android:id="@+id/iv_zan"
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                android:src="@drawable/iv_zan" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="赞"
                                android:textColor="#808080"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="("
                                android:textColor="#808080"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:id="@+id/tv_zan_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#808080"
                                android:textSize="@dimen/font_12" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=")"
                                android:textColor="#808080"
                                android:textSize="@dimen/font_12" />
                        </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <ListView
                android:id="@+id/lv_pinglun"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:background="@color/color_fwhite" >
            </ListView>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/title_background"
        android:orientation="horizontal"
        android:visibility="visible" >

        <ImageView
            android:id="@+id/iv_comment_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:src="@drawable/iv_comment_bottom" />

        <ImageView
            android:id="@+id/iv_share_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:src="@drawable/iv_share_bottom" />
        <ImageView
            android:id="@+id/iv_add_friend_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:src="@drawable/iv_add_friend_bottom" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_submit_commit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.1"
        android:background="@color/title_background"
        android:padding="5dp"
        android:visibility="gone" >

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/color_white" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/btn_send"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:background="@null"
            android:text="发送"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_16" />
    </LinearLayout>

</LinearLayout>